<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="style.css" />
    <title>Document</title>
  </head>

  <body>
    <head>
      <%if (task == null){ %>
      <form action="/create" method="post">
        <input
          type="text"
          name="task"
          id="task"
          placeholder="Adicione uma tarefa"
        />
        <button type="submit" id="addBotton">Adicionar</button>
      </form>

      <%} else { %>
      <form action="/updateOne/<%= task._id %>" method="post">
        <input type="text" name="task" id="task" value="<%= task.task %>" />
        <button type="submit" id="addBotton">Atualizar</button>
      </form>
      <% } %>
    </head>

    <section id="tasks">
      <ul>
        <% tasksList.forEach((task) =>{ %>
        <li>
          <%= task.task%> | <%= task.date.toLocaleDateString('pt-br')%>
          <a href="/getById/<%= task._id %>/update">Editar</a>
          <a href="/getById/<%= task._id %>/delete">Apagar</a>
        </li>
        <% }); %>
    </section>

    <% if (taskDelete != null) { %>
    <section id="modal">
      <div class="card">
        <a href="/">x</a>
        <h2>Confirmação</h2>
        <hr />
        <p>Deseja realmente apagar a tarefa: <%= taskDelete.task %>?</p>
        <a href="/">Não</a>
        <a href="/deleteOne/<%= taskDelete._id %>">Sim</a>
      </div>
    </section>
    <% } %>

    <script src="script.js"></script>
  </body>
</html>
